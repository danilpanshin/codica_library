tr
  
  td
    - unless book.cover_url.nil?
      = image_tag book.cover_url(:thumbnail)
  td = book.title
  td = book.authors.collect(&:name).join(", ") if book.authors.present?
  td = book.category.title if book.category.present?
  -if can? :update, Book
    td = link_to 'Edit book', edit_book_path(book)
  -if can? :destroy, Book
    td = link_to 'Delete book', book_path(book), method: :delete, data: { confirm: 'Are you sure?' }
  -if can? :update, Book
    td = link_to 'Add author to book', book_add_path(book)
  -if can? :update, Book
    td = link_to 'Delete author from book', book_delete_author_form_path(book)